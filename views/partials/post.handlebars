{{!-- Post layout sample --}}
<a href="/viewpost/{{id}}">
    <div class="card">
        <h3 class="post-header">{{title}} </h3>
        {{!-- // CREDIT: Worked on this part with the help of coder colleague Brams Lo --}}
        <h4>Posted by {{user.username}} on {{format_date created_at}}</h4>
        <div class="container">
            <p class="post-text">{{body}}</p>
        </div>
    </div>
</a>